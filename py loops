#WHILE
print("While loop:") # trying to separate the sections
num=1
while num<= 10:
  print(num)
  num+=1 
#FOR
print("For loop:")
for i in range (1,11):
  print(i)
#to see which numbers are divisible between 0-50.. use the for loop
print("numbers divisible by 3,6,and 9)
for number in range(0,51):
  if number % 3 == 0 or number % 6 == 0 or number % 9 == 0:
    print (number)
# 12 / 2 repeatedly?!
print(" 12 / 2 ")
value = 12 
prev_val = 12
change = abs(value-prev_val)
iterations = 0
# the value is the start, the prev is the value of prev loop, the change is the start, and the iteration is the counter
#keep looping as long as value is over 0.0001:
while change>=0.0001:
  prev_val = value
  value /= 2
  change = abs(value - prev_val)
  iterations += 1
  # once you hit smaller than 0.0001 it will print results
print(f"Number of iterations: {iterations}")

print("............")
print("done :)")
